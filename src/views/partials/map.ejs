<aside id="create-map" class="animate__animated animate__bounceInLeft">
  <h1>Map</h1>

    <form action="/maps" enctype="multipart/form-data" method="post">

    <label for="name">Title</label>
    <input type="text" id="name" name="name" required >

    <label for="description">Description</label>
    <textarea type="text" id="description" name="description" rows="2" cols="1" required></textarea>

    <fieldset>
      <legend>Image</legend>
      <label for="header_image">Select a file:</label>
      <input type="file" name="header_image" accept='image/*' required>
    </fieldset>
    <input type="submit" value="Save Map">

  </form>
</aside>